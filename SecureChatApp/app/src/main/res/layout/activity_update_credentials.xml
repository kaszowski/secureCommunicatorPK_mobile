<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nagłówek: Zmiana hasła -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zmiana hasła"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:paddingBottom="8dp" />

            <!-- Pola do zmiany hasła -->
            <EditText
                android:id="@+id/etCurrentPasswordUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aktualne hasło"
                android:inputType="textPassword"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nowe hasło"
                android:inputType="textPassword"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zmień hasło"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Nagłówek: Zmiana danych -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zmiana danych użytkownika"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:paddingBottom="8dp" />

            <!-- Pola do zmiany danych -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nowa nazwa użytkownika"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etUsernameShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nowa nazwa wyświetlana"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nowy e-mail"
                android:inputType="textEmailAddress"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etCurrentPasswordUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aktualne hasło"
                android:inputType="textPassword"
                android:backgroundTint="#A5D6A7"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zaktualizuj dane"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />

            <!-- Pasek ładowania -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
